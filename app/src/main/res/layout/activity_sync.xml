<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.sync.SyncActivity"
        android:background="@color/colorPrimaryLight">


    <ProgressBar
            android:id="@+id/progressBar_loading"
            android:background="@drawable/oval_logo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.384"/>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:cardCornerRadius="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar_loading" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.666">

        <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="312dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvSyncType"
                    tools:text="@string/tv_getting"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:lines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textStyle="italic"
                    tools:text="table:orders/some "
                    android:layout_marginStart="5dp"
                    android:lines="1"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:id="@+id/loadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>